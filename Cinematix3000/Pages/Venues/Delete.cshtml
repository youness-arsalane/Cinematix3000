@page
@model Cinematix3000.Pages.Venues.DeleteModel

@{
    ViewData["Title"] = "Zaal '" + Model.Venue.Name + "' verwijderen";
}

<h1>@ViewData["Title"]</h1>

<h3>Are you sure you want to delete this?</h3>
<div>
    <h4>Venue</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Venue.Cinema)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Venue.Cinema.Name)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Venue.Name)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Venue.Name)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Venue.Capacity)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Venue.Capacity)
        </dd>
    </dl>
    
    <form method="post">
        <input type="hidden" asp-for="Venue.ID" />
        <input type="submit" value="Delete" class="btn btn-danger" /> |
        <a asp-page="./Index">Ga terug</a>
    </form>
</div>

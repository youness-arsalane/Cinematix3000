@page
@model Cinematix3000.Pages.Venues.EditModel

@{
    ViewData["Title"] = "Zaal '" + Model.Venue.ID + "' aanpassen";
}

<h1>@ViewData["Title"]</h1>

<h4>Venue</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Venue.ID" />
            <div class="form-group">
                <label asp-for="Venue.CinemaID" class="control-label"></label>
                <select asp-for="Venue.CinemaID" class="form-control" asp-items="ViewBag.CinemaID"></select>
                <span asp-validation-for="Venue.CinemaID" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Venue.Name" class="control-label"></label>
                <input asp-for="Venue.Name" class="form-control" />
                <span asp-validation-for="Venue.Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Venue.Capacity" class="control-label"></label>
                <input asp-for="Venue.Capacity" class="form-control" />
                <span asp-validation-for="Venue.Capacity" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Opslaan" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="./Index">Ga terug</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}

@page
@model Cinematix3000.Pages.VenueMovies.DeleteModel

@{
    ViewData["Title"] = "Voorstelling '" + Model.VenueMovie.ID + "' verwijderen";
}

<h1>@ViewData["Title"]</h1>

<h3>Are you sure you want to delete this?</h3>
<div>
    <h4>VenueMovie</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.VenueMovie.Movie)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.VenueMovie.Movie.ID)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.VenueMovie.Venue)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.VenueMovie.Venue.Name)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.VenueMovie.StartDateTime)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.VenueMovie.StartDateTime)
        </dd>
    </dl>

    <form method="post">
        <input type="hidden" asp-for="VenueMovie.ID" />
        <input type="submit" value="Delete" class="btn btn-danger" /> |
        <a asp-page="./Index">Ga terug</a>
    </form>
</div>

@page
@model Cinematix3000.Pages.VenueMovies.DetailsModel

@{
    ViewData["Title"] = "Voorstelling '" + Model.VenueMovie.ID + "'";
}

<h1>@ViewData["Title"]</h1>

<div>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.VenueMovie.Movie)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.VenueMovie.Movie.Title)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.VenueMovie.Venue)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.VenueMovie.Venue.Name)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.VenueMovie.StartDateTime)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.VenueMovie.StartDateTime)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.VenueMovie.Reservations)
        </dt>
        <dd class="col-sm-10">
            <table class="table">
                <tr>
                    <th>Naam</th>
                    <th>Stoelnummer</th>
                    <th>Prijs</th>
                    <th>&nbsp;</th>
                </tr>
                @foreach (var item in Model.VenueMovie.Reservations)
                {
                    <tr>
                        <td>
                            @{
                                string fullName = item.Client.FullName();
                            }
                            <a asp-page="/Clients/Details" asp-route-id="@item.Client.ID">@Html.DisplayFor(modelItem => fullName)</a>
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.SeatNumber)
                        </td>
                        <td>
                            &euro; @Html.DisplayFor(modelItem => item.Price)
                        </td>
                        <td>
                            <a asp-page="../Reservations/Details" asp-route-id="@item.ID">Bekijken</a>
                        </td>
                    </tr>
                }
            </table>
        </dd>
    </dl>
</div>
<div>
    <a asp-page="./Edit" asp-route-id="@Model.VenueMovie.ID">Aanpassen</a> |
    <a asp-page="./Index">Ga terug</a>
</div>

@page
@model Cinematix3000.Pages.Reservations.CreateModel

@{
    ViewData["Title"] = "Nieuwe reservering toevoegen";
}

<h1>@ViewData["Title"]</h1>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Reservation.ClientID" class="control-label"></label>
                <select asp-for="Reservation.ClientID" class="form-control" asp-items="ViewBag.ClientID"></select>
            </div>
            <div class="form-group">
                <label asp-for="Reservation.VenueMovieID" class="control-label"></label>
                <select asp-for="Reservation.VenueMovieID" class="form-control" asp-items="ViewBag.VenueMovieID"></select>
            </div>
            <div class="form-group">
                <label asp-for="Reservation.SeatNumber" class="control-label"></label>
                <input asp-for="Reservation.SeatNumber" class="form-control" />
                <span asp-validation-for="Reservation.SeatNumber" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Reservation.Price" class="control-label"></label>
                <div class="input-group">
                    <div class="input-group-prepend">
                        <span class="input-group-text">&euro;</span>
                    </div>
                    <input asp-for="Reservation.Price" class="form-control" />
                    <span asp-validation-for="Reservation.Price" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group">
                <label asp-for="Reservation.UserName" class="control-label"></label>
                <input asp-for="Reservation.UserName" class="form-control" value="@ViewBag.UserName" readonly="readonly"/>
                <span asp-validation-for="Reservation.UserName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Toevoegen" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="Index">Ga terug</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}

@page
@model Cinematix3000.Pages.Reservations.DetailsModel

@{
    ViewData["Title"] = "Details";
    Layout = "~/Pages/Shared/_Layout.cshtml";
}

<h1>Details</h1>

<div>
    <h4>Reservation</h4>
    <hr />
    <div class="row">
        <div class="col-sm-8">
            <dl class="row">
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.Reservation.Client)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.Reservation.Client.FirstName) @Html.DisplayFor(model => model.Reservation.Client.LastName)
                </dd>
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.Reservation.VenueMovie)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.Reservation.VenueMovie.ID)
                </dd>
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.Reservation.SeatNumber)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.Reservation.SeatNumber)
                </dd>
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.Reservation.Price)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.Reservation.Price)
                </dd>
            </dl>
        </div>
        <div class="col-sm-4">
            <div class="row">
                <img src="https://kreuze.nl/wp-content/uploads/2019/08/QR-code.jpeg" alt="QR_CODE" />

            </div>
        </div>
    </div>
</div>
<div>
    <button type="button" class="btn btn-primary" onclick="window.print()">Printen</button>
</div>
<div>
    <a asp-page="./Edit" asp-route-id="@Model.Reservation.ID">Edit</a> |
    <a asp-page="./Index">Back to List</a>
</div>

@page
@model Cinematix3000.Pages.Reservations.DetailsModel

@{
    ViewData["Title"] = "Reservering '" + Model.Reservation.ID + "'";
}

<h1>@ViewData["Title"]</h1>


<div>
    <hr />
    <div class="row">
        <div class="col-sm-8">
            <dl class="row">
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.Reservation.Client)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.Reservation.Client.FirstName) @Html.DisplayFor(model => model.Reservation.Client.LastName)
                </dd>
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.Reservation.VenueMovie)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.Reservation.VenueMovie.ID)
                </dd>
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.Reservation.SeatNumber)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.Reservation.SeatNumber)
                </dd>
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.Reservation.Price)
                </dt>
                <dd class="col-sm-10">
                    &euro; @Html.DisplayFor(model => model.Reservation.Price)
                </dd>
            </dl>
        </div>
        <div class="col-sm-4">
            <div class="row">
                <img src="https://store-images.s-microsoft.com/image/apps.33967.13510798887182917.246b0a3d-c3cc-46fc-9cea-021069d15c09.392bf5f5-ade4-4b36-aa63-bb15d5c3817a?mode=scale&q=90&h=270&w=270&background=%230078D7" alt="QR_CODE" />

            </div>
        </div>
    </div>
</div>
<div>
    <button type="button" class="btn btn-primary" onclick="window.print()">Printen</button>
</div>
<div>
    <a asp-page="./Edit" asp-route-id="@Model.Reservation.ID">Edit</a> |
    <a asp-page="./Index">Back to List</a>
</div>
